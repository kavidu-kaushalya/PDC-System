<UserControl x:Class="PDC_System.Oders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDC_System.Orders"
             mc:Ignorable="d" 
             >

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Hidden">
        
    <Grid HorizontalAlignment="Center" >

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0">
           
                    
                  

                    <StackPanel Height="100" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Order" FontSize="40" FontWeight="Bold" Foreground="White" />
                </StackPanel>
               
                

          
        </StackPanel>
        
        <StackPanel Grid.Row="1">


            <StackPanel Grid.Row="1" Margin="20">
                <Button x:Name="AddOrderButton" Style="{StaticResource ActionButton}" Content="Add Order" HorizontalAlignment="Left" Margin="10" Click="AddOrderButton_Click" Width="150"/>
            </StackPanel>
           
            
                <StackPanel Grid.Row="3">

               

                    <StackPanel>
                        <DataGrid x:Name="OrdersDataGrid" BorderBrush="{x:Null}" HeadersVisibility="Column" IsReadOnly="False"
               Background="Transparent"
               RowBackground="White"
               AlternatingRowBackground="#f0f0f0"
               SnapsToDevicePixels="True"
               Height="500"
              
               AutoGenerateColumns="False"
               CanUserResizeColumns="False"
               CellStyle="{StaticResource DataGridCellStyle}"
               Style="{StaticResource DataGridStyle}"
               ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
               RowStyle="{StaticResource DataGridRowStyle}">

                                <DataGrid.Columns>
                                <DataGridTextColumn Header="Date" Binding="{Binding CreateDate, StringFormat='yyyy/MM/dd hh:mm tt'}" Width="*" ElementStyle="{StaticResource NameColumnStyle}"/>
                                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat='yyyy/MM/dd hh:mm tt'}" Width="2*" ElementStyle="{StaticResource EmailColumnStyle}"/>
                                <DataGridTextColumn Header="Contact No:Countdown" Binding="{Binding Countdown}" Width="2*" ElementStyle="{StaticResource ContactColumnStyle}"/>
                                <DataGridTextColumn Header="Customer Name" Binding="{Binding CustomerName}" Width="2*" ElementStyle="{StaticResource TypeColumnStyle}"/>
                                <DataGridTextColumn Header="Customer Description" Binding="{Binding Description}" Width="2*" ElementStyle="{StaticResource TypeColumnStyle}"/>
                                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*" ElementStyle="{StaticResource TypeColumnStyle}"/>
                                    <DataGridTemplateColumn Header="Action" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                            <StackPanel >
                                                <!-- Show "Mark as Finished" if the order is not finished -->
                                                <Button Width="100" Style="{StaticResource ActionButton}" Content="Mark as Finished" 
Click="MarkAsFinished_Click" 
Visibility="{Binding IsFinished, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}" />
                                                <!-- Show "Revert" if the order is finished -->
                                                <Button Width="80" Style="{StaticResource NavigationButtonStyle}" Content="Revert" 
Click="Revert_Click" 
Visibility="{Binding IsFinished, Converter={StaticResource BoolToVisibilityConverter}}" />
                                            </StackPanel>
                                            <!-- Pass the row data through Tag -->
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Action" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                            <StackPanel >
                                                <Button   Content="Delete"  
                                                      Click="DeleteOrders_Click" 
                                                      Height="30" 
                                                      Width="60" 
                                                      FontSize="10" 
                                                      Style="{StaticResource DeleteActionButton}"/>
                                            </StackPanel>

                                    
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
    
        </StackPanel>

               
                    
            </StackPanel>


            
        </StackPanel>
        

    </Grid>
    </ScrollViewer>
</UserControl>
