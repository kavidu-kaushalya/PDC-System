<UserControl x:Class="PDC_System.HomeUIWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDC_System"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             MinHeight="550" MinWidth="675"
             FontFamily="{StaticResource CustomFont}">

    <UserControl.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Panels -->
            <StackPanel Grid.Row="0" Grid.ColumnSpan="3" Margin="0,20,0,20">
                <UniformGrid Grid.Row="0"
             Grid.ColumnSpan="3"
             Columns="3"
             Margin="0,10,0,10">

                    <!-- TOTAL JOBS CARD -->
                    <Border Background="{DynamicResource Background}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
            CornerRadius="20"
            Margin="0,5,5,5"
            Padding="20">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon -->
                            <Border Width="50"
                    Height="50"
                    Background="#FFEB6E4E"
                    CornerRadius="25"
                    VerticalAlignment="Center">

                                <Image Source="/Assets/Asset_25.png"
                       Width="24"
                       Height="24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>

                            <!-- Text -->
                            <StackPanel Grid.Column="1"
                        Margin="15,0,0,0"
                        VerticalAlignment="Center">

                                <TextBlock Text="TOTAL JOBS"
                           Foreground="#9CA3AF"
                           FontSize="13"/>

                                <TextBlock x:Name="Total_Jobs"
                           Text="0"
                           Foreground="White"
                           FontSize="30"
                           FontWeight="Bold"/>

                            </StackPanel>

                        </Grid>

                    </Border>


                    <!-- PRESENT TODAY CARD -->
                    <Border Background="{DynamicResource Background}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
            CornerRadius="20"
            Margin="5"
            Padding="20">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="50"
                    Height="50"
                    Background="#16a34a"
                    CornerRadius="25">

                                <Image Source="/Assets/Asset_24.png"
                       Width="24"
                       Height="24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1"
                        Margin="15,0,0,0">

                                <TextBlock Text="PRESENT TODAY"
                           Foreground="#9CA3AF"
                           FontSize="13"/>

                                <TextBlock x:Name="Present_Employee"
                           Text="0"
                           Foreground="White"
                           FontSize="30"
                           FontWeight="Bold"/>

                            </StackPanel>

                        </Grid>

                    </Border>


                    <!-- TOTAL CUSTOMERS CARD -->
                    <Border Background="{DynamicResource Background}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="2"
            CornerRadius="20"
            Margin="5,5,0,5"
            Padding="20">

                        <Grid>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Width="50"
                    Height="50"
                    Background="#FFEB194E"
                    CornerRadius="25">

                                <Image Source="/Assets/Asset_37.png"
                       Width="24"
                       Height="24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1"
                        Margin="15,0,0,0">

                                <TextBlock Text="TOTAL CUSTOMERS"
                           Foreground="#9CA3AF"
                           FontSize="13"/>

                                <TextBlock x:Name="Total_Customers"
                           Text="0"
                           Foreground="White"
                           FontSize="30"
                           FontWeight="Bold"/>

                            </StackPanel>

                        </Grid>

                    </Border>

                </UniformGrid>
            </StackPanel>

            <!-- Left Bar Chart -->
            <Border x:Name="Panel_2" Grid.Column="0" Grid.Row="1" BorderThickness="3" Background="{DynamicResource Background}" BorderBrush="{DynamicResource BorderBrush}" CornerRadius="30" Margin="5,20,5,20" HorizontalAlignment="Stretch">
                <StackPanel VerticalAlignment="Bottom" Margin="20" HorizontalAlignment="Stretch">
                    <TextBlock x:Name="countjobname" Text="Monthly Jobs" Foreground="{DynamicResource Forground}" FontSize="20"/>
                    <TextBlock x:Name="Countofjob" Text="10" Foreground="{DynamicResource Forground}" FontSize="30"/>

                    <Grid Margin="20">
                        <ItemsControl Name="BarChart" HorizontalAlignment="Stretch">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="10" VerticalAlignment="Bottom">
                                        <Rectangle Width="50" Height="{Binding Value}" Fill="#FF0660FE" RadiusX="5" RadiusY="5" />
                                        <TextBlock Text="{Binding Label}" Foreground="{StaticResource Barcolor}" FontSize="13" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </StackPanel>
            </Border>




            <!-- Upcoming Birthdays -->
            <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5,20,5,20">

                <Border Background="{DynamicResource Background}" 
            BorderThickness="3" 
            BorderBrush="{DynamicResource BorderBrush}"  
            CornerRadius="30"
            Padding="10">

                    <StackPanel Width="500">
                        <!-- Title -->
                        <TextBlock x:Name="birthdayname"
                       Grid.Row="0"
                       FontSize="23"
                       FontWeight="Bold"
                       Margin="10"
                       Foreground="White"
                       TextAlignment="Center"
                       Text="Up Coming Birthdays"/>

                        <!-- DataGrid -->
                        <DataGrid x:Name="MyDataGrid"
                      Grid.Row="1"
                               
                      ItemsSource="{Binding UpcomingBirthdays}"
                      AlternatingRowBackground="#f0f0f0"
                      SnapsToDevicePixels="True"
                      AutoGenerateColumns="False"
                      CanUserResizeColumns="False"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      CellStyle="{StaticResource DataGridCellStyle}"
                      Style="{StaticResource DataGridStyle}"
                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                      RowStyle="{StaticResource DataGridRowStyle}">

                            <DataGrid.Columns>

                                <DataGridTextColumn Binding="{Binding Name}"
                    Width="*"
               
                                                    
                    ElementStyle="{StaticResource DataGridColumnsStyle}"/>

                                <DataGridTextColumn Binding="{Binding BirthDate, StringFormat=MMMM dd}"
                    Width="*"
               
                    ElementStyle="{StaticResource DataGridColumnsStyle}"/>

                                <!-- Days left column -->
                                <DataGridTemplateColumn  Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>


                                            <StackPanel HorizontalAlignment="Center">
                                                <TextBlock TextAlignment="Center"
         VerticalAlignment="Center"
         HorizontalAlignment="Center">

                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">

                                                            <!-- Default text -->
                                                            <Setter Property="Text"
                  Value="{Binding DaysLeft, StringFormat=Days Left: {0}}"/>

                                                            <!-- Birthday today trigger -->
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding DaysLeft}" Value="0">
                                                                    <Setter Property="Text"
                          Value="TODAY IS BIRTHDAY"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>

                                                        </Style>
                                                    </TextBlock.Style>

                                                </TextBlock>
                                            </StackPanel>



                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>

                        </DataGrid>
                    </StackPanel>

               



             
                </Border>

            </StackPanel>

            <Border Grid.Row="2" Grid.ColumnSpan="3" Grid.Column="0"
Background="{DynamicResource Background}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="3"
CornerRadius="14"
Padding="16"
Margin="5">

                <StackPanel>
                    <TextBlock Text="Attendance Overview (Last 7 Days)"
           FontSize="16"
                           Foreground="{DynamicResource Forground}"
           FontWeight="SemiBold"
           Margin="0,0,0,12"/>

                    <lvc:CartesianChart Series="{Binding AttendanceSeries}"
                    LegendLocation="None"
                    Height="220"
                    Background="Transparent">

                        <!-- X AXIS -->
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Labels="{Binding Labels}"
                  Foreground="#8A8F98">
                                <lvc:Axis.Separator>
                                    <lvc:Separator Step="1"
                                           IsEnabled="False"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisX>

                        <!-- Y AXIS -->
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis ShowLabels="True" MinValue="0">
                                <lvc:Axis.Separator>
                                    <lvc:Separator IsEnabled="False"/>
                                </lvc:Axis.Separator>
                            </lvc:Axis>
                        </lvc:CartesianChart.AxisY>

                    </lvc:CartesianChart>
                </StackPanel>
            </Border>

        </Grid>
    </ScrollViewer>

</UserControl>
