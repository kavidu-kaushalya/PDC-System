<Window x:Class="PDC_System.EmailDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        mc:Ignorable="d"
         FontFamily="{StaticResource CustomFont}"
        Title="WhatsAppDetails" Height="705" Width="495" ResizeMode="NoResize">

    <Border     CornerRadius="10">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFF4980" Offset="1"/>
                <GradientStop Color="#FF4F56FF" Offset="0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Border >
            <Border.Background>
                <SolidColorBrush Color="#FF13111A" Opacity="0.95"/>
            </Border.Background>


            <StackPanel Margin="30">
            <Grid>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>




                <StackPanel Orientation="Horizontal" Grid.Row="0"
                            HorizontalAlignment="Center" Margin="10">
                        <Image Source="/Assets/Mail.png" 
                           Height="90"/>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12">

                            <TextBlock Text="Email" FontWeight="Medium" FontSize="30" Foreground="White"  VerticalAlignment="Center" />
                            <TextBlock Text="If you share it with someone." FontWeight="Light" FontSize="15" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="20">
                        <Border Height="200" Width="200" Background="White" CornerRadius="30" >
                            <Image Margin="10" Source="/Assets/PriyanthaDieCuttingMail.png"/>

                        </Border>
                        <TextBlock FontSize="15" Foreground="White" FontWeight="Light" Margin="0,10,0,0" TextAlignment="Center" Text="Email"/>
                        <TextBlock FontSize="23" Foreground="White" FontWeight="Bold" Margin="10" TextAlignment="Center" Text="priyanthadiecutting@gmail.com"/>
                    </StackPanel>

                    <StackPanel  Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" >
                        <Border Height="50" Width="300" Background="#FF13111A" CornerRadius="25" BorderThickness="0.5" BorderBrush="#FF8C8C8C">
                            <StackPanel Height="35" Margin="8" VerticalAlignment="Center">





                                <TextBox x:Name="txtEmail"
                                         VerticalAlignment="Center"
                                         Margin="10"
                                         TextAlignment="Center"
                                         Height="30"
                                         FontSize="15"
                                         Foreground="White"
                                         Background="Transparent"
                                         BorderBrush="Transparent"
                                         SelectionBrush="#FF8A8A8A" CaretBrush="White">    
                                    
                                    
                                    <TextBox.Template>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="Transparent" BorderBrush="Transparent" BorderThickness="0">
                                                <ScrollViewer x:Name="PART_ContentHost" />
                                            </Border>
                                        </ControlTemplate>
                                    </TextBox.Template>
                                </TextBox>
                                 
                                
                                
                                
                                
                            </StackPanel>
                           
                        </Border>

                        <StackPanel Margin="10">
                            <TextBlock Text="Sent Email"
                                       HorizontalAlignment="Center"
                                       Foreground="#FFA4A4A4"
                                       FontWeight="ExtraLight"></TextBlock>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Grid.Row="3" Margin="20">
                        <Button Click="SendEmail_Click"  Content="Sent Email" Width="180" Height="50" Style="{StaticResource UiWinodwButton}"  >
                            <Button.Effect>
                                <DropShadowEffect Color="#FFC72EB3" Direction="0" ShadowDepth="0" BlurRadius="10"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>

                   


            </Grid>
            </StackPanel>
        </Border>
    </Border>
    
</Window>
