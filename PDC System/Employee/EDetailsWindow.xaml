<UserControl x:Class="PDC_System.EDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PDC_System"
    mc:Ignorable="d"
    FontFamily="{StaticResource CustomFont}">

    <Border Background="#FF1D1A27" CornerRadius="30" >


        <Grid HorizontalAlignment="Center"  Height="auto" >



            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Top" >
                <Border Height="200" Width="200" CornerRadius="10" >
                    <Image x:Name="ImagePreview" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <!-- TextBlock centered on top of the Image -->
                <TextBlock TextAlignment="Center"  Text="Kavindu Kaushalya" x:Name="NameTextBlock" FontSize="20"  FontWeight="Bold" Foreground="White" />
                <TextBlock  TextAlignment="Center" Text="Graphic Designer" x:Name="Jobrole" FontSize="15"  FontWeight="Regular" Foreground="White" />
                <TextBlock TextAlignment="Center" x:Name="AgeTextBlock" Text="22 Years Old" Foreground="White" Margin="5" />
            </StackPanel>

            <StackPanel Margin="20" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" >
                <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Background="#FF1D1A27">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid Margin="10" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>

                        </Grid.RowDefinitions>


                        <StackPanel Grid.Row="0" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                            <TextBlock Text="Net Salary" FontWeight="Medium" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
                            <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                <TextBlock x:Name="salary" Text="35000.00" Margin="8" FontWeight="Medium" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                            <TextBlock Text="Basic Salary" FontWeight="Medium" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
                            <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                <TextBlock x:Name="Basicsalary" Text="50000.00" Margin="8" FontWeight="Medium" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                            <TextBlock Text="Overtime (h)" FontWeight="Medium" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
                            <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                <TextBlock x:Name="ot" Text="180.00" Margin="8" FontWeight="Medium" Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                            <TextBlock Text="Double Over Time (h)" FontWeight="Medium" Margin="0,0,0,5" Foreground="#FFCCCCCC"/>
                            <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                <TextBlock x:Name="DOT" Text="200.00" Margin="8" FontWeight="Medium" Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>





            <StackPanel Grid.Row="3" Grid.Column="1" Grid.RowSpan="2" Height="auto" Width="auto" HorizontalAlignment="Center">


                <StackPanel Margin="0,10,0,20" >

                    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="10" Background="#FF1D1A27" HorizontalAlignment="Center" >
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.1"/>
                        </Border.Effect>

                        <StackPanel>
                            <Grid Margin="10">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Attendance ID" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="Attendanceid" Text="2003.06.01" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Birthday" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5" />
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="Birthday" Text="2003.06.01" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Address Line 1" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="address1" Text="address1" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Address Line 2" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="address2" Text="Welihinda" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="City" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="city" Text="Kaduwela" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Province" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="province" Text="Westurn" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="National ID" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="nid" Text="200315312084" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="5" Grid.Column="0" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Primary Phone No" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="con1" Text="0726676344" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="5" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Secondary Phone No" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="con2" Text="0726676344" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Row="4" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="10">
                                    <TextBlock Text="Department" FontWeight="Medium" Foreground="#FFCCCCCC" Margin="0,0,0,5"/>
                                    <Border Background="#FF13111A" BorderBrush="Black" BorderThickness="0.5" CornerRadius="5">
                                        <TextBlock x:Name="dep" Text="OFFSET" Margin="8" FontWeight="Medium" Foreground="White"/>
                                    </Border>
                                </StackPanel>





                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </StackPanel>

        </Grid>

    </Border>
    
</UserControl>
