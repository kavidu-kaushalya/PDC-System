<UserControl x:Class="PDC_System.EmployeeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDC_System"
             mc:Ignorable="d" 
             MinWidth="1004" MinHeight="660"
              FontFamily="{StaticResource CustomFont}"
             >

    <StackPanel >
       
            <StackPanel>




            <TextBlock Text="Employee" 
       FontSize="20" 
       FontWeight="SemiBold" 
       Foreground="{DynamicResource Forground}"                        
       TextAlignment="Left" />

            <TextBlock Text="Show all Plate,Digital and Any" 
       FontSize="12" 
       FontWeight="Normal" 
       Foreground="#FF7D7D7D"
       TextAlignment="Left" Padding="0,0,0,18"/>




        </StackPanel>
            

            <StackPanel Grid.Column="1" Grid.RowSpan="2" Margin="30,0,0,0">
                <ContentControl x:Name="MainContent"  Width="auto" Height="auto" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>







            <StackPanel >
                
                
                <StackPanel >
                    <Button Content="Add Employee" Click="AddEmployee_Click" Width="200" Style="{StaticResource ActionButton}" Margin="10"/>
                </StackPanel>

              <StackPanel Margin="10" Orientation="Horizontal" >



                    <TextBox  x:Name="SearchBox" Height="35" Style="{DynamicResource OutsourceSerchBar}" Width="300" TextChanged="SearchBox_TextChanged"  />
            </StackPanel>










                    
              
                    <DataGrid x:Name="EmployeeDataGrid" AutoGenerateColumns="False" Height="300"
AlternatingRowBackground="#f0f0f0"
SnapsToDevicePixels="True"


CanUserResizeColumns="False"
CellStyle="{StaticResource DataGridCellStyle}"
Style="{StaticResource DataGridStyle}"
ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
RowStyle="{StaticResource DataGridRowStyle}">
                        <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" ElementStyle="{StaticResource NameColumnStyle}"/>
                    <DataGridTextColumn Header="Employee ID" Binding="{Binding EmployeeId}" Width="*" ElementStyle="{StaticResource NameColumnStyle}"/>
                    <DataGridTemplateColumn Header="Action" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate >
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                                    <Button
     Content="Delete"  
     Click="DeleteEmployee_Click" 
     HorizontalAlignment="Center"
     Height="30" 
     Width="60" 
     Style="{StaticResource NavigationButtonStyle}"/>

                                    <Button Content="Edit" 
                                            Style="{DynamicResource ActionButton}"
                            Padding="5" 
                            Click="EditEmployee_Click"
                            Tag="{Binding}">
                                    </Button>
                                </StackPanel>

                            </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                        </DataGrid.Columns>
                    </DataGrid>

            
            </StackPanel>




        
    </StackPanel>
</UserControl>
