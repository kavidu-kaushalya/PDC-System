<Window x:Class="PDC_System.AddETFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        mc:Ignorable="d"
        Title="AddETFWindow" Height="450" Width="800">
    <Grid>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel>
                <TextBlock Text="Employee:"/>
                <ComboBox x:Name="EmployeeCombo" DisplayMemberPath="Name" SelectedValuePath="EmployeeId" Width="250"/>

                <TextBlock Text="Basic Salery" Margin="0,10,0,0"/>
                <TextBox x:Name="BasicSalery" Width="250"/>
  

                <Button Content="Save" Width="100" Margin="0,15,0,0" Click="Save_Click"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
