<Window x:Class="PDC_System.AddLoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        xmlns:cal="clr-namespace:ModernCalendarLib;assembly=ModernCalendarLib"
        mc:Ignorable="d"
        Foreground="{DynamicResource Forground}"
        Title="Add Loan"
        Height="450" Width="550"
        Background="{DynamicResource Background}"
        WindowStartupLocation="CenterScreen">

    <Grid>

        <!-- Center Card Layout -->
        <Border Background="{DynamicResource Background}"
                Padding="25"
                CornerRadius="10"
                Width="auto"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1">

            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Employee -->
                <TextBlock Text="Employee:"
                           Grid.Row="0" Grid.Column="0"
                           VerticalAlignment="Center"/>
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}"
                          x:Name="EmployeeCombo"
                          Grid.Row="0" Grid.Column="1"
                          Width="220"
                          DisplayMemberPath="Name"
                          SelectedValuePath="EmployeeId"/>

                <!-- Loan Amount -->
                <TextBlock Text="Loan Amount:"
                           Grid.Row="1" Grid.Column="0"
                           Margin="0,12,0,0"
                           VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource TextBoxStyle}"
                         x:Name="LoanAmountBox"
                         Grid.Row="1" Grid.Column="1"
                         Width="220"
                         Margin="0,12,0,0"/>

                <!-- Monthly Pay -->
                <TextBlock Text="Monthly Pay:"
                           Grid.Row="2" Grid.Column="0"
                           Margin="0,12,0,0"
                           VerticalAlignment="Center"/>
                <TextBox Style="{DynamicResource TextBoxStyle}"
                         x:Name="MonthlyPayBox"
                         Grid.Row="2" Grid.Column="1"
                         Width="220"
                         Margin="0,12,0,0"/>

                <!-- Date -->
                <TextBlock Text="Date:"
                           Grid.Row="3" Grid.Column="0"
                           Margin="0,12,0,0"
                           VerticalAlignment="Center"/>
                <Border Grid.Row="3" Grid.Column="1"
                        Margin="0,12,0,0"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="2"
                        CornerRadius="5">
                    <cal:CustomDatePicker x:Name="LoanDatePicker"
                                          Width="220"/>
                </Border>

                <!-- Save Button -->
                <Button Style="{DynamicResource ActionButton}"
                        Content="Save"
                        Grid.Row="4" Grid.ColumnSpan="2"
                        Width="120" Height="35"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Click="Save_Click"/>
            </Grid>

        </Border>
    </Grid>

</Window>
