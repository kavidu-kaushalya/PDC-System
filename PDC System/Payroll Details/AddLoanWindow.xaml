<Window x:Class="PDC_System.AddLoanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        mc:Ignorable="d"
        Title="AddLoanWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Employee:"/>
            <ComboBox x:Name="EmployeeCombo" DisplayMemberPath="Name" SelectedValuePath="EmployeeId" Width="250"/>

            <TextBlock Text="Loan Amount:" Margin="0,10,0,0"/>
            <TextBox x:Name="LoanAmountBox" Width="250"/>

            <TextBlock Text="Monthly Pay:" Margin="0,10,0,0"/>
            <TextBox x:Name="MonthlyPayBox" Width="250"/>

            <Button Content="Save" Width="100" Margin="0,15,0,0" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
