<Window x:Class="PDC_System.AddCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="{StaticResource CustomFont}"
       Background="{DynamicResource Background}"
        Title="Add Customer" Height="auto" Width="400">
    
    
    
    <StackPanel VerticalAlignment="Top" Margin="10">
        <Label  Foreground="{DynamicResource Forground}" Content="Company or Person:" FontSize="14"/>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton  Style="{DynamicResource SelectableRadioButtonStyle}" Width="100" x:Name="CP" FontSize="16" Content="Company" GroupName="CustomerType" Checked="RadioButton_Checked" Unchecked="RadioButton_Unchecked"/>
                <RadioButton Style="{DynamicResource SelectableRadioButtonStyle}" Width="100" x:Name="PersonRB" FontSize="16" Content="Person" GroupName="CustomerType" IsChecked="True" Checked="RadioButton_Checked" Unchecked="RadioButton_Unchecked"/>

            </StackPanel>


        </StackPanel>

        <Label  Foreground="{DynamicResource Forground}" x:Name="CompanyLabel" Content="Company Name:" FontSize="14" Visibility="Collapsed"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="CompanyTextBox"  FontSize="16" Visibility="Collapsed"/>
        <Label  Foreground="{DynamicResource Forground}" Content="Person Name:" FontSize="14"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="NameTextBox"  FontSize="16" />
        <Label  Foreground="{DynamicResource Forground}" Content="Address:" FontSize="14"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="AddressTextBox" FontSize="16"/>
        <Label  Foreground="{DynamicResource Forground}"  Content="Contact No:" FontSize="14"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="ContactNoTextBox"  FontSize="16" PreviewTextInput="ContactNoTextBox_PreviewTextInput" TextChanged="ContactNoTextBox_TextChanged"/>
        <Label  Foreground="{DynamicResource Forground}" Content="Email:" FontSize="14"/>
        <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="EmailTextBox" FontSize="16"/>
        <Button Content="Save" Click="Save_Click" Margin="10" Height="34" Width="272" Style="{DynamicResource ActionButton}"/>
    </StackPanel>
</Window>