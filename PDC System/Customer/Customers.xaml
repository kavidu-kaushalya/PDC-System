<UserControl x:Class="PDC_System.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PDC_System"
             mc:Ignorable="d" 
             FontFamily="{StaticResource CustomFont}"
             MinWidth="1004" MinHeight="660">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>
        
        

        <StackPanel Grid.Row="0">
           
     
    

                <StackPanel Orientation="Vertical" Height="100" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Customer" 
       FontSize="20" 
       FontWeight="SemiBold" 
       Foreground="{DynamicResource Forground}"                        
       TextAlignment="Left" />

                <TextBlock Text="Show all Customers  and Company" 
       FontSize="12" 
       FontWeight="Normal" 
       Foreground="#FF7D7D7D"
       TextAlignment="Left" Padding="0,0,0,18"/>

            </StackPanel>



  
        </StackPanel>
        
        <StackPanel Grid.Row="1">
        



            <Grid Margin="0,0,0,10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Customers -->
                <Border Background="{DynamicResource Background}"
                         BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="2"
            CornerRadius="15"
            Padding="20"
            Margin="0,0,10,0">

                    <StackPanel>

                        <TextBlock Text="TOTAL CUSTOMERS"
                       Foreground="#9CA3AF"
                       FontSize="13"/>

                        <TextBlock x:Name="TotalCustomersTxt"
                       Text="0"
                       Foreground="#35d499"
                       FontSize="28"
                       FontWeight="Bold"/>

                    </StackPanel>

                </Border>


                <!-- Total Companies -->
                <Border Grid.Column="1"
           Background="{DynamicResource Background}"
                         BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="2"
            CornerRadius="15"
            Padding="20">

                    <StackPanel>

                        <TextBlock Text="TOTAL COMPANIES"
                       Foreground="#9CA3AF"
                       FontSize="13"/>

                        <TextBlock x:Name="TotalCompaniesTxt"
                       Text="0"
                       Foreground="#5b9ced"
                       FontSize="28"
                       FontWeight="Bold"/>

                    </StackPanel>

                </Border>

            </Grid>




            <Grid HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Top">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>



                <Button Grid.Row="0" HorizontalAlignment="Right" Style="{StaticResource ActionButton}" 
            Content="+ Add Customer" 
            Click="AddCustomer_Click" 
            Width="250"
            
            Margin="30"/>




                <DataGrid Grid.Row="1" x:Name="CustomerDataGrid" BorderBrush="{x:Null}" HeadersVisibility="Column" IsReadOnly="False"
               Background="Transparent"
               RowBackground="White"
               AlternatingRowBackground="#f0f0f0"
               SnapsToDevicePixels="True"
               Height="500"
               AutoGenerateColumns="False"
               CanUserResizeColumns="False"
               CellStyle="{StaticResource DataGridCellStyle}"
               Style="{StaticResource DataGridStyle}"
               ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
               RowStyle="{StaticResource DataGridRowStyle}">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" ElementStyle="{StaticResource DataGridColumnsStyle}"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="2*" ElementStyle="{StaticResource DataGridColumnsStyle}"/>
                        <DataGridTextColumn Header="Email:" Binding="{Binding Email}" Width="2*" ElementStyle="{StaticResource DataGridColumnsStyle}"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="2*" ElementStyle="{StaticResource DataGridColumnsStyle}"/>
                            <DataGridTemplateColumn Header="Action" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                                        <Button Click="DeleteCustomer_Click" Content="Delete" Style="{DynamicResource DeleteActionButton}" />


                                    </StackPanel>
                                        <!-- Pass the row data through Tag -->
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
   


    



                </Grid>

     

        </StackPanel>
    </Grid>
</UserControl>
