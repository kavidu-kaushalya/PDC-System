<Window x:Class="PDC_System.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        mc:Ignorable="d"
        WindowStyle="None"
        
        
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Background="Transparent"
        x:Name="LoadingWindow"
        AllowsTransparency="True"
        FontFamily="{StaticResource CustomFont}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Foreground="Black"
        
        Title="Loading" Height="450" Width="750">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Opacity="0.505" BlurRadius="8"/>
    </Window.Effect>
    <Grid >
        <Border Margin="8" x:Name="LoadingB" Background="#1A1A1A" CornerRadius="10"/>



        <Grid x:Name="MainGrid" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <StackPanel Margin="0,0,0,30" HorizontalAlignment="Left">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Image HorizontalAlignment="Left" Grid.Column="0" Source="/Assets/MainLogo.png" Width="50"/>
                        <StackPanel Margin="8,0,0,0" Grid.Column="1" Height="50" Grid.Row="1" Orientation="Vertical">
                            <TextBlock  Text="PRIYANTHA" FontSize="24" TextAlignment="Left" FontWeight="Bold" Padding="0,2,0,0" />
                            <TextBlock  Text="DIE CUTTING" FontSize="15" Height="20" TextAlignment="Left" FontWeight="Bold" Padding="0,0,0,0" />

                     
                        </StackPanel>
                        
                        
                       




                    </Grid>
                    
                    
                    <StackPanel x:Name="GoogleSignButton" Visibility="Visible" HorizontalAlignment="Center" Margin="0,60,0,0">

                        <Button Style="{StaticResource BtnSignLoading}"  Name="btnOpenMain" Width="220" Height="40"
HorizontalAlignment="Center" VerticalAlignment="Center"
Click="btnOpenMain_Click">
                            <StackPanel Orientation="Horizontal">
                                <Image Margin="0,0,8,0" Source="/Assets/search.png" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Width="24" Height="24" HorizontalAlignment="Center"/>
                                <TextBlock Text="Sign In with Google" FontSize="16"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Margin="5" Click="Continue_click" >
                            <StackPanel>
                                <TextBlock Text="Continue Without sign in"/>
                            </StackPanel>
                          
                        </Button>
                    </StackPanel>

                </StackPanel>


                <StackPanel x:Name="LoadingBar" Visibility="Collapsed">
                    <TextBlock Text="Starting.." FontSize="15" TextAlignment="Left" FontWeight="Regular" Margin="0,10,0,0"/>
                    <ProgressBar Height="6" Style="{StaticResource RunningProgressBarStyle}" Width="250" HorizontalAlignment="Left" IsIndeterminate="True" Margin="0,5,0,0"/>
                </StackPanel>
               
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">
                <Image x:Name="MyGifImage"
       Width="300"
       RenderOptions.BitmapScalingMode="HighQuality"
       SnapsToDevicePixels="True"/>
            </StackPanel>
            



        </Grid>

    </Grid>
  
</Window>
