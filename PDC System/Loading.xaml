<Window x:Class="PDC_System.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System"
        mc:Ignorable="d"
        WindowStyle="None"
        
        
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        Background="Transparent"
        x:Name="LoadingWindow"
        AllowsTransparency="True"
        FontFamily="{StaticResource CustomFont}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Foreground="{DynamicResource Forground}"
        
        Title="Loading" Height="450" Width="750">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Opacity="0.505" BlurRadius="8"/>
    </Window.Effect>
    <Grid >
        <Border Margin="8" x:Name="LoadingB" Background="{DynamicResource ThemeBackground}" CornerRadius="10"/>



        <Grid x:Name="MainGrid" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                
                <StackPanel Margin="0,0,0,30" HorizontalAlignment="Left">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Image HorizontalAlignment="Left" Grid.Column="0" Source="/Assets/MainLogo.png" Width="50"/>
                        <StackPanel Margin="8,0,0,0" Grid.Column="1" Height="50" Grid.Row="1" Orientation="Vertical">
                            <TextBlock  Text="PRIYANTHA" FontSize="24" TextAlignment="Left" FontWeight="Bold" Padding="0,2,0,0" />
                            <TextBlock  Text="DIE CUTTING" FontSize="15" Height="20" TextAlignment="Left" FontWeight="Bold" Padding="0,0,0,0" />

                     
                        </StackPanel>


                        
                        
                       




                    </Grid>
                    
                    
                  
                </StackPanel>

                <StackPanel x:Name="Logininfo">

                    <TextBlock Text="User Name:"/>
                    <TextBox x:Name="UserName" Style="{DynamicResource TextBoxStyle}"/>
                    <TextBlock Text="Password:"/>
                    <PasswordBox x:Name="Password"/>

                    <Button Content="Login" Style="{DynamicResource ActionButton}" Width="100" Click="Login_Click" Margin="0,20,0,0"/>

                </StackPanel>


                <StackPanel x:Name="LoadingBar" Visibility="Visible"/>

            </StackPanel>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1">

                <StackPanel>

                    <TextBlock Text="System Startup Check"
                       FontSize="18"
                       FontWeight="Bold"
                       
                       Margin="0,0,0,20"/>

                    <!-- iVMS -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock x:Name="IvmsIcon" Text="⏳" FontSize="16" Width="30"/>
                        <TextBlock x:Name="IvmsText" Text="Checking iVMS-4200..."
                          />
                    </StackPanel>

                    <!-- SQL -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock x:Name="SqlIcon" Text="⏳" FontSize="16" Width="30"/>
                        <TextBlock x:Name="SqlText" Text="Checking SQL Server..."
                          />
                    </StackPanel>

                    <!-- Network -->
                    <StackPanel Orientation="Horizontal" Margin="0,5">
                        <TextBlock x:Name="NetIcon" Text="⏳" FontSize="16" Width="30"/>
                        <TextBlock x:Name="NetText" Text="Checking Network..."
                           />
                        
                        
                    </StackPanel>

                    <Button x:Name="RecheckButton"
        Content="Recheck"
        Width="120"
        Height="35"
        Margin="0,20,0,0"
                            
                            Style="{DynamicResource NavigationButtonStyle}"
        Visibility="Hidden"
        Click="RecheckButton_Click"/>





                </StackPanel>

            </StackPanel>
            



        </Grid>

    </Grid>
  
</Window>
