<Window x:Class="PDC_System.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:PDC_System.Settings"
        mc:Ignorable="d" 
        x:Name="SettingsWindowForground"
        Background="Transparent"
        WindowStyle="None" 
        ResizeMode="CanResize"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Height="auto" Width="800">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                        CornerRadius="10"
                        ResizeBorderThickness="6"
                        GlassFrameThickness="0"
                        NonClientFrameEdges="None"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Main Grid container -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Outer Border for rounded white background -->
        <Border Background="{DynamicResource SettingsBackground}" BorderBrush="White" BorderThickness="0.5" CornerRadius="20" Grid.ColumnSpan="2">
            <Grid>

                <!-- ❌ Close button - Fixed (Not inside ScrollViewer) -->
                <StackPanel VerticalAlignment="Top" Margin="20" Orientation="Horizontal" HorizontalAlignment="Right">

                    <Button x:Name="Colose" Content="🗙" Width="25" Height="25" Click="Close_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Background="Transparent" Style="{DynamicResource NavigationButtonStyle}" BorderBrush="{x:Null}" />
                </StackPanel>

                <!-- ✅ Scrollable area -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,50,0,0">
                    <Grid>
                        <StackPanel HorizontalAlignment="Center">

                            <Grid>
                                <!-- Define 7 rows for different sections -->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Single column -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="542"/>
                                </Grid.ColumnDefinitions>

                                <!-- Settings Title -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Margin="0,20,0,0" Text="Settings" FontSize="24" FontWeight="Bold" />
                                </StackPanel>

                                <!-- Account Section -->
                                <StackPanel Grid.Row="1">
                                    <TextBlock Margin="0,20,0,20"  Text="Account" FontSize="18" FontWeight="SemiBold" />
                                    <Border CornerRadius="20" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{DynamicResource BorderBrush}" Width="542">
                                        <StackPanel>
                                            <StackPanel Margin="20" x:Name="GoogleAccount" Visibility="Collapsed" >
                                                <Ellipse x:Name="imgProfileEllipse" Width="50" Height="50" Stroke="Gray" StrokeThickness="1"/>
                                                <TextBlock TextAlignment="Center" x:Name="lblUserName"  Text="User Name" FontWeight="Bold" FontSize="13" Margin="0,5,0,0" VerticalAlignment="Stretch"/>
                                                <TextBlock TextAlignment="Center" x:Name="lblEmail"  Text="Email" VerticalAlignment="Stretch" FontSize="10"/>
                                                <Button x:Name="BtnSignOut" Width="60" Click="BtnSignOut_Click" Style="{StaticResource CloSignInStyle}">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image x:Name="SingOutButtonImage" Width="8" HorizontalAlignment="Center"/>
                                                        <TextBlock Margin="5,0,0,0" Text="Log Out" VerticalAlignment="Center" FontSize="8" HorizontalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>

                                            <StackPanel x:Name="GoogleSignButton" Visibility="Collapsed">
                                                <Button Style="{StaticResource BtnSignLoading}" Name="btnOpenMain" Width="220" Height="40"
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"
                                                        Click="GoogleSingin_Click">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Margin="0,0,8,0" Source="/Assets/search.png" RenderOptions.BitmapScalingMode="HighQuality" SnapsToDevicePixels="True" Width="24" Height="24" HorizontalAlignment="Center"/>
                                                        <TextBlock Text="Sign In with Google" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- General Settings Section -->
                                <StackPanel Grid.Row="2">
                                    <TextBlock Margin="0,20,0,20"  Text="Genaral" FontSize="18" FontWeight="SemiBold" />
                                    <Border CornerRadius="20" BorderThickness="1" VerticalAlignment="Center" HorizontalAlignment="Center" BorderBrush="{DynamicResource BorderBrush}" Width="542">
                                        <StackPanel>
                                            <Grid  Margin="20" >
                                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Launch app on system startup" FontSize="14" FontWeight="Regular"/>
                                                <CheckBox HorizontalAlignment="Right" Margin="5" x:Name="chkStartup" Checked="chkStartup_Checked" Unchecked="chkStartup_Unchecked"/>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Appearance Section -->
                                <StackPanel Grid.Row="3">
                                    <TextBlock Margin="0,20,0,20" FontSize="18"  Foreground="{DynamicResource Forground}" FontWeight="SemiBold" Text="Appearance"/>
                                    <Border Background="{DynamicResource SettingsBackground}"  BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="20" HorizontalAlignment="Center" Height="204" Width="542">
                                        <StackPanel Margin="30">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition/>
                                                    <RowDefinition/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Grid.Row="0" Margin="12,0,0,12" FontSize="15" FontWeight="SemiBold" Text="Theme"/>
                                                <StackPanel Grid.Row="1" Orientation="Horizontal" >
                                                    <RadioButton x:Name="LightRadio" Margin="10" Background="#f5f7f8" Width="140" Height="90"  Style="{StaticResource ThemeSelecter}"   Checked="LightRadio_Checked">
                                                        <StackPanel Margin="10">
                                                            <Image Margin="0,0,0,12"  Source="/Assets/L_D.png" Width="20" Height="20"/>
                                                            <TextBlock VerticalAlignment="Center" Foreground="Black" TextAlignment="Center" Text="Light"/>
                                                        </StackPanel>
                                                    </RadioButton>
                                                    <RadioButton x:Name="DarkRadio" Margin="10" Width="140" Height="90"  Style="{StaticResource ThemeSelecter2}" Checked="DarkRadio_Checked">
                                                        <StackPanel Margin="10">
                                                            <Image Margin="0,0,0,12"  Source="/Assets/N_w.png" Width="20" Height="20"/>
                                                            <TextBlock VerticalAlignment="Center" Foreground="White" TextAlignment="Center" Text="Dark"/>
                                                        </StackPanel>
                                                    </RadioButton>
                                                    <RadioButton x:Name="SystemRadio" Margin="10" Background="#f5f7f8" Width="140" Height="90"  Style="{StaticResource ThemeSelecter}" Checked="SystemRadio_Checked">
                                                        <StackPanel Margin="10">
                                                            <Image Margin="0,0,0,12"  Source="/Assets/Def_D.png" Width="20" Height="20"/>
                                                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Text="System"/>
                                                        </StackPanel>
                                                    </RadioButton>
                                                </StackPanel>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>

                                <!-- Database Section -->
                                <StackPanel Grid.Row="4" Margin="0,0,0,30">
                                    <StackPanel>
                                        <TextBlock  Foreground="{DynamicResource Forground}" Text="Database" Margin="0,20,0,20" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel IsEnabled="True" x:Name="SettingsDisable" Orientation="Vertical" VerticalAlignment="Top">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="15" Orientation="Vertical">
                                                <TextBlock Text="IP:" Margin="0,0,0,10" />
                                                <TextBox  PreviewTextInput="TxtIP_PreviewTextInput" Style="{DynamicResource TextBoxStyle}" x:Name="TxtIP" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="1"  Margin="15" Orientation="Vertical">
                                                <TextBlock Text="Port:" Margin="0,0,0,10" />
                                                <TextBox MaxLength="5"
         PreviewTextInput="TxtNumber_PreviewTextInput"
         PreviewKeyDown="TxtNumber_PreviewKeyDown" Style="{DynamicResource TextBoxStyle}" x:Name="TxtPort" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Grid.Column="0"  Margin="15" Orientation="Vertical">
                                                <TextBlock Text="User:" Margin="0,0,0,10"/>
                                                <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="TxtUser"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="1" Grid.Column="1" Margin="15" Orientation="Vertical">
                                                <TextBlock Text="Password:" Margin="0,0,0,10" />
                                                <PasswordBox x:Name="TxtPass" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="15" Orientation="Vertical">
                                                <TextBlock Text="Database:" Margin="0,0,0,10" />
                                                <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="TxtDBName" />
                                            </StackPanel>
                                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="15" Orientation="Vertical">
                                                <TextBlock Text="Table:" Margin="0,0,0,10" />
                                                <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="TxtTable"/>
                                            </StackPanel>

                                        </Grid>
                                    </StackPanel>
                                    <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,0,0,10">
                                        <Button x:Name="LoginBtn" Visibility="Visible" Content="Log in" Style="{DynamicResource ActionButton}" Width="120" Click="BtnSave_Click"/>

                                        <Button x:Name="LogoutBtn" Visibility="Hidden" Content="Logout" Width="120" Click="BtnLogout_Click" Style="{DynamicResource NavigationButtonStyle}"/>
                                    </Grid>



                                    <StackPanel>
                                        <TextBlock Text="ETF | EPF"  Foreground="{DynamicResource Forground}" Margin="0,20,0,20" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>


                                    <StackPanel>
                                        <Label Content="EPF Employee (%)" Foreground="{DynamicResource Forground}"/>
                                        <TextBox x:Name="EPFEmployee" TextChanged="TextBox_TextChanged" Style="{DynamicResource TextBoxStyle}" ></TextBox>
                                        <Label Content="EPF Employer (%)" Foreground="{DynamicResource Forground}"/>
                                        <TextBox  x:Name="EPFEmployer" TextChanged="TextBox_TextChanged" Style="{DynamicResource TextBoxStyle}"></TextBox>
                                        <Button x:Name="btnSave" Style="{DynamicResource ActionButton}" Content="💾 Save Changes" Click="btnSave_Click"
                Visibility="Visible" Width="150" Height="30" HorizontalAlignment="Center" Margin="10,10,10,10"/>
                                    </StackPanel>


                                    <StackPanel>
                                        <TextBlock Text="Attendance" Foreground="{DynamicResource Forground}" Margin="0,20,0,20" FontSize="18" FontWeight="SemiBold"/>
                                    </StackPanel>


                                    <StackPanel>
                                        <Label Content="OT Round Minutes" Foreground="{DynamicResource Forground}"/>
                                        <TextBox x:Name="OT_RoundMinutes" Style="{DynamicResource TextBoxStyle}" ></TextBox>
                                        <Label Content="Attendance Calculation Time" Foreground="{DynamicResource Forground}"/>
                                        <TextBox x:Name="TimerIntervalMinutes" Style="{DynamicResource TextBoxStyle}"></TextBox>
                                    </StackPanel>

                                    <StackPanel  HorizontalAlignment="Left" Margin="0,10,0,0">

                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox x:Name="chkSendDailyReport" Content="Daliy Report"></CheckBox>
                                            <TextBlock VerticalAlignment="Center" Text="Send daily attendance report to employees via email." FontSize="12" Foreground="{DynamicResource Forground}" Margin="20,0,0,0"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox x:Name="SendAttendanceEmails" Content="Employee Daily Report"></CheckBox>
                                            <TextBlock VerticalAlignment="Center" Text="Send daily attendance report to employees via email." FontSize="12" Foreground="{DynamicResource Forground}" Margin="20,0,0,0"/>
                                        </StackPanel>







                                    </StackPanel>

                                    <Button x:Name="AttendancebtnSave" Style="{DynamicResource ActionButton}" Content="💾 Save Changes" Click="AttendancebtnSave_Click"
Visibility="Visible" Width="150" Height="30" HorizontalAlignment="Center" Margin="10,10,10,10"/>



                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
