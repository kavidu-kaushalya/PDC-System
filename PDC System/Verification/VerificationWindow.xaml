<Window x:Class="PDC_System.VerificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="Enter Verification Code" Height="auto"  Background="Transparent" Width="480">
    
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                        CornerRadius="10"
                        ResizeBorderThickness="6"
                        GlassFrameThickness="0"
                        NonClientFrameEdges="None"/>
    </shell:WindowChrome.WindowChrome>
    <StackPanel>
        <Border Margin="5" HorizontalAlignment="Center" Background="White" CornerRadius="10" VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Opacity="0.20" BlurRadius="8"/>
            </Border.Effect>
            <Grid>

                <Button Click="BtnClose_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True" Style="{StaticResource BackuoStyle}" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    <StackPanel>
                        <TextBlock Text="X" ></TextBlock>
                    </StackPanel>
                </Button>
                
                <StackPanel Margin="30">
                    <Image x:Name="MyGifImage"
Width="200"
RenderOptions.BitmapScalingMode="HighQuality"
SnapsToDevicePixels="True"/>
                    <Border BorderBrush="DarkRed"   CornerRadius="10" BorderThickness="1" Margin="0,20,0,20" >
                        <StackPanel Margin="10">
                            <TextBlock Foreground="DarkRed" Text="⚠ Warning!" TextAlignment="Center" Margin="10" FontSize="15" FontWeight="SemiBold"/>
                            <TextBlock Foreground="DarkRed" TextWrapping="Wrap" Text="This action will permanently delete all system data including: Attendance, 
           Salary, Paysheets, Jobs, and Orders.This action will also clear Google Drive backups and replace them with old data." />
                            <TextBlock Foreground="DarkRed" TextAlignment="Center" Margin="10" Text="👉 Once completed, this process cannot be undone. Proceed with caution." TextWrapping="Wrap" Width="auto" />
                        </StackPanel>
                        
                    </Border>
                    

                    <TextBlock Text="Enter verification code sent to your email:" Margin="0,0,0,10"/>
                    <TextBox Name="CodeTextBox" Height="25" Margin="0,0,0,10"/>

                    <Button Name="VerifyButton" Style="{StaticResource BackuoStyle}" Content="Verify" Click="VerifyButton_Click" Height="30" Margin="0,0,0,10"/>
                    <Button Name="ResendButton" Content="Resend Code" Click="ResendButton_Click" Height="30" Visibility="Collapsed"/>

                    <TextBlock Name="TimerTextBlock" Margin="0,10,0,0" Foreground="Blue"/>
                    <TextBlock Name="StatusTextBlock" Margin="0,10,0,0" Foreground="Red"/>
                </StackPanel>
            </Grid>
            
            
        </Border>
        
    </StackPanel>
    
</Window>
