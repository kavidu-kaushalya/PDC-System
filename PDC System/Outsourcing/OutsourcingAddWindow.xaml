<Window x:Class="PDC_System.Customer.OutsourcingAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDC_System.Customer"
        mc:Ignorable="d"
        Title="OutsourcingWindow" Height="450" Width="800">
    <StackPanel Margin="10">

        <!-- Radio Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <RadioButton Checked="OutsourcingType_Checked" x:Name="Plate_Checked" Content="Plate(Offset)" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton Checked="OutsourcingType_Checked" x:Name="Digital_Checked" Content="Digital" Margin="0,0,10,0"/>
            <RadioButton Checked="OutsourcingType_Checked" x:Name="Any_Checked" Content="Any"/>
        </StackPanel>

        <!-- Plate Panel -->
        <StackPanel x:Name="PlateStackPanel" Visibility="Visible" Margin="0,0,0,10">
            <Label Content="Plate Name:" FontSize="14"/>
            <TextBox x:Name="PlateNameTextBox" Height="25" FontSize="16"/>
            <Label Content="Email Address" FontSize="14"/>
            <TextBox x:Name="PlateCompanyEmailTextBox" Height="25" FontSize="16"/>
            <Label Content="Contact No:" FontSize="14"/>
            <TextBox x:Name="PlateCompanyContactTextBox" Height="25" FontSize="16"/>
            <Label Content="Plate Cost:" FontSize="14"/>
            <TextBox x:Name="PlateCostTextBox" Height="25" FontSize="16"/>
        </StackPanel>

        <!-- Digital Panel -->
        <StackPanel x:Name="DigitalStackPanel" Visibility="Collapsed" Margin="0,0,0,10">
            <Label Content="Digital Company Name:" FontSize="14"/>
            <TextBox x:Name="DigitalCompanyNameTextBox" Height="25" FontSize="16"/>
            <Label Content="Email Address" FontSize="14"/>
            <TextBox x:Name="DigitalCompanyEmailTextBox" Height="25" FontSize="16"/>
            <Label Content="Contact No:" FontSize="14"/>
            <TextBox x:Name="DigitalCompanyContactTextBox" Height="25" FontSize="16"/>
        </StackPanel>

        <!-- Any Panel -->
        <StackPanel x:Name="AnyStackPanel" Visibility="Collapsed" Margin="0,0,0,10">
            <Label Content="Any Company Name:" FontSize="14"/>
            <TextBox x:Name="AnyCompanyNameTextBox" Height="25" FontSize="16"/>
            <Label Content="Email Address" FontSize="14"/>
            <TextBox x:Name="AnyCompanyEmailTextBox" Height="25" FontSize="16"/>
            <Label Content="Contact No:" FontSize="14"/>
            <TextBox x:Name="AnyCompanyContactTextBox" Height="25" FontSize="16"/>
        </StackPanel>

        <!-- Save Button -->
        <Button Content="Save" Click="Save_Click" Height="34" Width="272" Background="Black" Foreground="White"/>
    </StackPanel>
</Window>
