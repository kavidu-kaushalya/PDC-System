<Window x:Class="PDC_System.AddJobCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         FontFamily="{StaticResource CustomFont}" ScrollViewer.VerticalScrollBarVisibility="Auto"
        Title="Add Job Card (Digital Printing)" Height="886" Width="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


    <StackPanel Margin="10">

        <TextBlock x:Name="typebox" FontSize="18" FontWeight="Bold"/>
        <TextBlock x:Name="companyname" FontSize="16"/>
        <TextBlock x:Name="JobNumberTextBox" FontSize="16"/>


            <Label Content="Customer Name:" FontSize="14"/>
        <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="CustomerComboBox" IsEditable="True" DisplayMemberPath="Name" FontSize="16" 
          SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" 
          Text="{Binding ManualCustomerName, Mode=TwoWay}" />

            <Label Content="Description:" FontSize="14"/>
        <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="DescriptionTextBox" IsEditable="True"  FontSize="16">
            <ComboBoxItem Content="NoteBook"/>
            <ComboBoxItem Content="Flyers"/>
            <ComboBoxItem Content="Letterheads"/>
            <ComboBoxItem Content="Calendars"/>
            <ComboBoxItem Content="Stickers"/>
            <ComboBoxItem Content="Invitations"/>
            <ComboBoxItem Content="Menus"/>
            <ComboBoxItem Content="Labels"/>
            <ComboBoxItem Content="Posters"/>
            <ComboBoxItem Content="Business cards"/>
            <ComboBoxItem Content="Brochures"/>
            <ComboBoxItem Content="Annual Reports"/>
            <ComboBoxItem Content="Magazines"/>
            <ComboBoxItem Content="Envelopes"/>
            <ComboBoxItem Content="Packaging"/>
            <ComboBoxItem Content="Newsletters"/>
            <ComboBoxItem Content="Pamphlets"/>
        </ComboBox>
        <Label Content="Quantity:" FontSize="14"/>
        <TextBox Style="{DynamicResource TextBoxStyle}"  x:Name="QuantityTextBox"  FontSize="16" PreviewTextInput="QuantityTextBox_PreviewTextInput"/>





            <StackPanel Orientation="Horizontal" Margin="10">
                <RadioButton Style="{DynamicResource SelectableRadioButtonStyle}" x:Name="Digital_Checked" 
                 Content="Digital Printing" 
                 IsChecked="True"
                 Height="30" Width="150"
                 Checked="Digital_Clicked"/>

                <RadioButton Style="{DynamicResource SelectableRadioButtonStyle}" x:Name="Offset_Checked" 
                 Content="Offset Printing"
                             Height="30" Width="150"
                 Checked="Offset_Clicked"/>
            </StackPanel>


            <StackPanel Margin="5" x:Name="Offset" Visibility="Collapsed">
                <TextBlock Text="Plate Company Name:" />
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="PlateCompanyTextBox" SelectionChanged="Outstanding_PrintingCompanyName_SelectionChanged2"  Width="200" />

                <TextBlock Text="Quantity:" Margin="0,5,0,0"/>
                <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="PlateQuantityTextBox" Width="200"/>
            </StackPanel>




            <StackPanel Margin="5" x:Name="Digital" Visibility="Collapsed">




                <CheckBox x:Name="OutstandingCheckBox" 
              Content="Outside Printing" 
              Checked="Outstanding_Checked" 
              Unchecked="Outstanding_Unchecked"/>


                <StackPanel x:Name="Oustanding_Printing" Visibility="Collapsed">
                    <Label Content="Digital Printing Company" FontSize="14" />
                    <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" SelectionChanged="Outstanding_PrintingCompanyName_SelectionChanged" x:Name="Outstanding_PrintingCompanyName"/>
                </StackPanel>



                <Label Content="Paper Size:" FontSize="14"  Margin="0,30,0,0"/>
                
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="PaperSizeTextBox" IsEditable="True" FontSize="16">
                    <ComboBoxItem Content="A3"/>
                    <ComboBoxItem Content="A4"/>
                    <ComboBoxItem Content="A5"/>
                    <ComboBoxItem Content="A6"/>
                    <ComboBoxItem Content="B3"/>
                    <ComboBoxItem Content="B4"/>
                    <ComboBoxItem Content="B5"/>
                    <ComboBoxItem Content="B6"/>
                    <ComboBoxItem Content="12x18 inch"/>
                    <ComboBoxItem Content="12.5x19 inch"/>
                    <ComboBoxItem Content="13x19 inch"/>
                    <ComboBoxItem Content="10.5x15 inch"/>
                    <ComboBoxItem Content="10.5x15 inch"/>
                </ComboBox>

                <Label Content="GSM:" FontSize="14"/>
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="GSMTextBox" IsEditable="True"  FontSize="16">
                    <ComboBoxItem Content="70"/>
                    <ComboBoxItem Content="80"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="120"/>
                    <ComboBoxItem Content="150"/>
                    <ComboBoxItem Content="180"/>
                    <ComboBoxItem Content="210"/>
                    <ComboBoxItem Content="260"/>
                    <ComboBoxItem Content="310"/>
                </ComboBox>

                <Label Content="Paper Type:" FontSize="14"/>
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="PaperTypeTextBox" IsEditable="True"  FontSize="16">
                    <ComboBoxItem Content="Gloss-Art Paper"/>
                    <ComboBoxItem Content="Matte-Art Paper"/>
                    <ComboBoxItem Content="Gloss-Art Bord"/>
                    <ComboBoxItem Content="Matte-Art Bord"/>
                    <ComboBoxItem Content="Ivory"/>
                    <ComboBoxItem Content="OGI"/>
                    <ComboBoxItem Content="Ice Gold"/>
                    <ComboBoxItem Content="Ice Silver"/>
                    <ComboBoxItem Content="Blank Paper"/>
                    <ComboBoxItem Content="Special Paper"/>
                </ComboBox>

                <Label Content="D/S:" FontSize="14" Margin="0,30,0,0"/>
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="DsTextBox"  FontSize="16" BorderBrush="White">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                    <ComboBoxItem Content="Single Side"/>
                    <ComboBoxItem Content="Double Side"/>
                </ComboBox>

                <Label Content="Laminate:" FontSize="14"/>
                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" x:Name="LaminateTextBox" FontSize="16">
                    <ComboBoxItem Content="No"/>
                    <ComboBoxItem Content="Matte Single Side"/>
                    <ComboBoxItem Content="Gloss Single Side"/>
                    <ComboBoxItem Content="Matte Double Side"/>
                    <ComboBoxItem Content="Gloss Double Side"/>

                </ComboBox>

                <Label Content="Printed Qty:" FontSize="14" Margin="0,30,0,0"/>
                <TextBox Style="{DynamicResource TextBoxStyle}" x:Name="PrintedTextBox"  FontSize="16" PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
            </StackPanel>


        <Label Content="Special Note" FontSize="14" Margin="0,30,0,0"/>
            <TextBox Style="{DynamicResource TextBoxStyle}" TextWrapping="Wrap" x:Name="SpecialTextBox" Height="112"  AcceptsReturn="True" FontSize="16"/>



        </StackPanel>
        <StackPanel Grid.Column="1" Margin="5">
            <Button Style="{DynamicResource ActionButton}" Width="150" Content="Capture Screen" Click="CaptureButton_Click"/>
            <Border CornerRadius="10"  BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="10">
                <Image x:Name="PreviewImage" Width="auto" Height="auto" Margin="10"/>
            </Border>
            <Button Content="Save" Click="Save_Click" Margin="10"  Height="26" Style="{StaticResource ActionButton}"  Foreground="White"/>
        </StackPanel>
    </Grid>
  
</Window>