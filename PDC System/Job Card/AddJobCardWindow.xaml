<Window x:Class="PDC_System.AddJobCardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontFamily="{StaticResource CustomFont}" 
          xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        Title="Add Job Card (Digital Printing)" 
        Foreground="{DynamicResource Forground}" 
        Background="{DynamicResource Background}" 
        Height="886" 
        AllowsTransparency="True"
        WindowStyle="None"
        Width="1100"
        WindowStartupLocation="CenterScreen">



    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="32"
                CornerRadius="10"
                          
                ResizeBorderThickness="6"
                GlassFrameThickness="0"
                NonClientFrameEdges="None"/>
    </shell:WindowChrome.WindowChrome>

    <Grid>

        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2" CornerRadius="6" >
            <Grid>



                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>



                <Border Margin="5" x:Name="TitleBar" Grid.Row="0"
Background="{DynamicResource TitleBarBackground}" 
>
                    <DockPanel>
                        <!-- App Logo -->
                        <Image Source="/Assets/MainLogo.png"  Height="20" Width="20" Margin="8,0"/>
                        <!-- App Title -->
                        <TextBlock x:Name="PDCtitel" Text="PDC System" Foreground="{DynamicResource Forground}"  VerticalAlignment="Center" Margin="8,0"/>
                        <!-- Control Panel -->



                        <!-- Title bar buttons -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="Minimize" Content="—" Width="25" Height="25" Click="Minimize_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Background="Transparent" Style="{DynamicResource NavigationButtonStyle}" BorderBrush="{x:Null}"/>
                            <Button x:Name="Maximize" Content="🗖" Width="25" Height="25" Click="Maximize_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Background="Transparent" Style="{DynamicResource NavigationButtonStyle}" BorderBrush="{x:Null}" />
                            <Button x:Name="Colose" Content="🗙" Width="25" Height="25" Click="Close_Click" shell:WindowChrome.IsHitTestVisibleInChrome="True" Margin="5" Background="Transparent" Style="{DynamicResource NavigationButtonStyle}" BorderBrush="{x:Null}" />
                        </StackPanel>








                    </DockPanel>
                </Border>


                <Grid Grid.Row="1" Margin="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Panel - Form -->
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>

                            <!-- Header Section -->
                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Foreground="{DynamicResource Forground}" 
                            x:Name="typebox" 
                            FontSize="22" 
                            FontWeight="Bold"
                            Margin="0,0,0,5"/>
                                <TextBlock Foreground="{DynamicResource Forground}" 
                            x:Name="companyname" 
                            FontSize="16"
                            Opacity="0.8"
                            Margin="0,0,0,3"/>
                                <TextBlock Foreground="{DynamicResource Forground}" 
                            x:Name="JobNumberTextBox" 
                            FontSize="16"
                            Opacity="0.8"/>
                            </StackPanel>

                            <!-- Customer Information -->
                            <StackPanel Margin="0,0,0,15">
                                <Label Foreground="{DynamicResource Forground}" 
                        Content="Customer Name:" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"/>
                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                           x:Name="CustomerComboBox" 
                           IsEditable="True" 
                           DisplayMemberPath="Name" 
                           FontSize="16" 
                           Height="35"
                           SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}" 
                           Text="{Binding ManualCustomerName, Mode=TwoWay}"/>
                            </StackPanel>

                            <!-- Description -->
                            <StackPanel Margin="0,0,0,15">
                                <Label Foreground="{DynamicResource Forground}" 
                        Content="Description:" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"/>
                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                           x:Name="DescriptionTextBox" 
                           IsEditable="True" 
                           FontSize="16"
                           Height="35">
                                    <ComboBoxItem Content="NoteBook"/>
                                    <ComboBoxItem Content="Flyers"/>
                                    <ComboBoxItem Content="Letterheads"/>
                                    <ComboBoxItem Content="Calendars"/>
                                    <ComboBoxItem Content="Stickers"/>
                                    <ComboBoxItem Content="Invitations"/>
                                    <ComboBoxItem Content="Menus"/>
                                    <ComboBoxItem Content="Labels"/>
                                    <ComboBoxItem Content="Posters"/>
                                    <ComboBoxItem Content="Business cards"/>
                                    <ComboBoxItem Content="Brochures"/>
                                    <ComboBoxItem Content="Annual Reports"/>
                                    <ComboBoxItem Content="Magazines"/>
                                    <ComboBoxItem Content="Envelopes"/>
                                    <ComboBoxItem Content="Packaging"/>
                                    <ComboBoxItem Content="Newsletters"/>
                                    <ComboBoxItem Content="Pamphlets"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- Quantity -->
                            <StackPanel Margin="0,0,0,20">
                                <Label Foreground="{DynamicResource Forground}" 
                        Content="Quantity:" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"/>
                                <TextBox Style="{DynamicResource TextBoxStyle}" 
                          x:Name="QuantityTextBox" 
                          FontSize="16"
                          Height="35"
                          PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                            </StackPanel>

                            <!-- Printing Type Selection -->
                            <Border BorderBrush="{DynamicResource BorderBrush}" 
                     BorderThickness="1" 
                     CornerRadius="5" 
                     Padding="15"
                     Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Printing Type" 
                                Foreground="{DynamicResource Forground}"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Margin="0,0,0,10"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <RadioButton Style="{DynamicResource SelectableRadioButtonStyle}" 
                                      x:Name="Digital_Checked" 
                                      Content="Digital Printing" 
                                      IsChecked="True"
                                      Height="35" 
                                      Width="170"
                                      Margin="0,0,10,0"
                                      Checked="Digital_Clicked"/>

                                        <RadioButton Style="{DynamicResource SelectableRadioButtonStyle}" 
                                      x:Name="Offset_Checked" 
                                      Content="Offset Printing"
                                      Height="35" 
                                      Width="170"
                                      Checked="Offset_Clicked"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Offset Printing Section -->
                            <Border x:Name="Offset" 
                     Visibility="Collapsed"
                     BorderBrush="{DynamicResource BorderBrush}" 
                     BorderThickness="1" 
                     CornerRadius="5" 
                     Padding="15"
                     Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Foreground="{DynamicResource Forground}" 
                                Text="Offset Printing Details" 
                                FontSize="16"
                                FontWeight="SemiBold"
                                Margin="0,0,0,15"/>

                                    <Label Foreground="{DynamicResource Forground}" 
                            Content="Plate Company Name:" 
                            FontSize="14"
                            Padding="0,0,0,5"/>
                                    <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                               x:Name="PlateCompanyTextBox" 
                               SelectionChanged="Outstanding_PrintingCompanyName_SelectionChanged2"
                               Height="35"
                               Margin="0,0,0,15"/>

                                    <Label Foreground="{DynamicResource Forground}" 
                            Content="Quantity:" 
                            FontSize="14"
                            Padding="0,0,0,5"/>
                                    <TextBox Style="{DynamicResource TextBoxStyle}" 
                              x:Name="PlateQuantityTextBox"
                              Height="35"/>
                                </StackPanel>
                            </Border>

                            <!-- Digital Printing Section -->
                            <StackPanel x:Name="Digital" Visibility="Collapsed">

                                <!-- Outside Printing Option -->
                                <Border BorderBrush="{DynamicResource BorderBrush}" 
                         BorderThickness="1" 
                         CornerRadius="5" 
                         Padding="15"
                         Margin="0,0,0,15">
                                    <StackPanel>
                                        <CheckBox x:Name="OutstandingCheckBox" 
                                   Content="Outside Printing" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Checked="Outstanding_Checked" 
                                   Unchecked="Outstanding_Unchecked"
                                   Margin="0,0,0,10"/>

                                        <StackPanel x:Name="Oustanding_Printing" Visibility="Collapsed">
                                            <Label Foreground="{DynamicResource Forground}" 
                                    Content="Digital Printing Company" 
                                    FontSize="14"
                                    Padding="0,0,0,5"/>
                                            <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                       SelectionChanged="Outstanding_PrintingCompanyName_SelectionChanged" 
                                       x:Name="Outstanding_PrintingCompanyName"
                                       Height="35"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Paper Specifications -->
                                <Border BorderBrush="{DynamicResource BorderBrush}" 
                         BorderThickness="1" 
                         CornerRadius="5" 
                         Padding="15"
                         Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="Paper Specifications" 
                                    Foreground="{DynamicResource Forground}"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,15"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Label Foreground="{DynamicResource Forground}" 
                                        Content="Paper Size:" 
                                        FontSize="14"
                                        Padding="0,0,0,5"/>
                                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                           x:Name="PaperSizeTextBox" 
                                           IsEditable="True" 
                                           FontSize="16"
                                           Height="35"
                                           Margin="0,0,0,15">
                                                    <ComboBoxItem Content="A3"/>
                                                    <ComboBoxItem Content="A4"/>
                                                    <ComboBoxItem Content="A5"/>
                                                    <ComboBoxItem Content="A6"/>
                                                    <ComboBoxItem Content="B3"/>
                                                    <ComboBoxItem Content="B4"/>
                                                    <ComboBoxItem Content="B5"/>
                                                    <ComboBoxItem Content="B6"/>
                                                    <ComboBoxItem Content="12x18 inch"/>
                                                    <ComboBoxItem Content="12.5x19 inch"/>
                                                    <ComboBoxItem Content="13x19 inch"/>
                                                    <ComboBoxItem Content="10.5x15 inch"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <Label Foreground="{DynamicResource Forground}" 
                                        Content="GSM:" 
                                        FontSize="14"
                                        Padding="0,0,0,5"/>
                                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                           x:Name="GSMTextBox" 
                                           IsEditable="True" 
                                           FontSize="16"
                                           Height="35"
                                           Margin="0,0,0,15">
                                                    <ComboBoxItem Content="70"/>
                                                    <ComboBoxItem Content="80"/>
                                                    <ComboBoxItem Content="100"/>
                                                    <ComboBoxItem Content="120"/>
                                                    <ComboBoxItem Content="150"/>
                                                    <ComboBoxItem Content="180"/>
                                                    <ComboBoxItem Content="210"/>
                                                    <ComboBoxItem Content="260"/>
                                                    <ComboBoxItem Content="310"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>

                                        <Label Foreground="{DynamicResource Forground}" 
                                Content="Paper Type:" 
                                FontSize="14"
                                Padding="0,0,0,5"/>
                                        <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                   x:Name="PaperTypeTextBox" 
                                   IsEditable="True" 
                                   FontSize="16"
                                   Height="35">
                                            <ComboBoxItem Content="Gloss-Art Paper"/>
                                            <ComboBoxItem Content="Matte-Art Paper"/>
                                            <ComboBoxItem Content="Gloss-Art Bord"/>
                                            <ComboBoxItem Content="Matte-Art Bord"/>
                                            <ComboBoxItem Content="Ivory"/>
                                            <ComboBoxItem Content="OGI"/>
                                            <ComboBoxItem Content="Ice Gold"/>
                                            <ComboBoxItem Content="Ice Silver"/>
                                            <ComboBoxItem Content="Blank Paper"/>
                                            <ComboBoxItem Content="Special Paper"/>
                                        </ComboBox>
                                    </StackPanel>
                                </Border>

                                <!-- Printing Options -->
                                <Border BorderBrush="{DynamicResource BorderBrush}" 
                         BorderThickness="1" 
                         CornerRadius="5" 
                         Padding="15"
                         Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock Text="Printing Options" 
                                    Foreground="{DynamicResource Forground}"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Margin="0,0,0,15"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <Label Foreground="{DynamicResource Forground}" 
                                        Content="D/S:" 
                                        FontSize="14"
                                        Padding="0,0,0,5"/>
                                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                           x:Name="DsTextBox" 
                                           FontSize="16" 
                                           Height="35"
                                           BorderBrush="White">
                                                    <ComboBox.Background>
                                                        <LinearGradientBrush EndPoint="0,1">
                                                            <GradientStop Color="#FFF0F0F0"/>
                                                            <GradientStop Color="White" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </ComboBox.Background>
                                                    <ComboBoxItem Content="Single Side"/>
                                                    <ComboBoxItem Content="Double Side"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2">
                                                <Label Foreground="{DynamicResource Forground}" 
                                        Content="Laminate:" 
                                        FontSize="14"
                                        Padding="0,0,0,5"/>
                                                <ComboBox Style="{DynamicResource ComboBoxFlatStyle}" 
                                           x:Name="LaminateTextBox" 
                                           FontSize="16"
                                           Height="35">
                                                    <ComboBoxItem Content="No"/>
                                                    <ComboBoxItem Content="Matte Single Side"/>
                                                    <ComboBoxItem Content="Gloss Single Side"/>
                                                    <ComboBoxItem Content="Matte Double Side"/>
                                                    <ComboBoxItem Content="Gloss Double Side"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>

                                        <Label Foreground="{DynamicResource Forground}" 
                                Content="Printed Qty:" 
                                FontSize="14"
                                Padding="0,0,0,5"
                                Margin="0,15,0,0"/>
                                        <TextBox Style="{DynamicResource TextBoxStyle}" 
                                  x:Name="PrintedTextBox" 
                                  FontSize="16"
                                  Height="35"
                                  PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>

                            <!-- Special Note -->
                            <StackPanel Margin="0,0,0,20">
                                <Label Foreground="{DynamicResource Forground}" 
                        Content="Special Note" 
                        FontSize="14" 
                        FontWeight="SemiBold"
                        Padding="0,0,0,5"/>
                                <TextBox Style="{DynamicResource TextBoxStyle}" 
                          TextWrapping="Wrap" 
                          x:Name="SpecialTextBox" 
                          Height="100" 
                          AcceptsReturn="True" 
                          FontSize="16"
                          VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Separator -->
                    <Border Grid.Column="1" Background="{DynamicResource BorderBrush}" Opacity="0.3"/>

                    <!-- Right Panel - Image Preview -->
                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Screen Capture" 
                    Foreground="{DynamicResource Forground}"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="0,0,0,10"/>

                        <Button Style="{DynamicResource ActionButton}" 
                 Width="180" 
                 Height="40"
                 Content="📷 Capture Screen" 
                 Click="CaptureButton_Click"
                 Margin="0,0,0,15"/>

                        <Border CornerRadius="10" 
                 BorderBrush="{DynamicResource BorderBrush}" 
                 BorderThickness="2" 
                 Background="{DynamicResource Background}"
                 Padding="5">
                            <Image x:Name="PreviewImage" 
                    Width="auto" 
                    Height="auto" 
                    Stretch="Uniform"
                    StretchDirection="DownOnly"/>
                        </Border>

                        <Button Content="💾 Save Job Card" 
                 Click="Save_Click" 
                 Margin="0,20,0,0" 
                Width="200"
                 Height="50"
                 FontSize="16"
                 FontWeight="SemiBold"
                 Style="{StaticResource ActionButton}" 
                 Foreground="White"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Grid>

   
</Window>