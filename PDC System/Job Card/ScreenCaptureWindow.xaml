<Window x:Class="PDC_System.ScreenCaptureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        WindowState="Maximized" Foreground="{x:Null}"
        Cursor="Cross">
    <Canvas x:Name="SelectionCanvas" Background="#01000000">
        <Rectangle x:Name="SelectionRectangle" Stroke="Red" StrokeThickness="2" Visibility="Collapsed"/>
    </Canvas>
</Window>