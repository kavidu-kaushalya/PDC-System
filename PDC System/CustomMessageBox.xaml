<Window x:Class="PDC_System.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Width="420"
        Foreground="{DynamicResource Forground}"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Window.Effect>
        <DropShadowEffect ShadowDepth="0" Opacity="0.505" BlurRadius="8"/>
    </Window.Effect>
    <Border CornerRadius="14"
           Margin="10"
            Background="{DynamicResource ThemeBackground}"
            Padding="20">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock x:Name="TxtTitle"
                       FontSize="16"
                       FontWeight="SemiBold"
                       />

            <!-- Content -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,15,0,0">
                <TextBlock x:Name="TxtIcon"
                           FontSize="28"
                           Margin="0,0,12,0"/>
                <TextBlock x:Name="TxtMessage"
                          
                           FontSize="14"
                           TextWrapping="WrapWithOverflow"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel x:Name="ButtonPanel"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>
