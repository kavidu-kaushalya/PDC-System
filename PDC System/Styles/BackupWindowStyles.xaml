    <Style x:Key="RoundedTextBox" TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource ForgroudColor}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Hidden"/>
        <Setter Property="HorizontalScrollBarVisibility" Value="Hidden"/>
        
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="Transparent"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="10"   
                        SnapsToDevicePixels="True">
                        <ScrollViewer Margin="0" BorderBrush="Transparent" Padding="10" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="SizeB" TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource ForgroudColor}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                CornerRadius="10"   
                        SnapsToDevicePixels="True">
                        <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="#0660FE"/>
        <Setter Property="Background" Value="{DynamicResource ProgressbarBackground}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Border   Background="{TemplateBinding Background}" CornerRadius="10"/>
                        <Border  x:Name="PART_Track" BorderThickness="0"  Background="Transparent" CornerRadius="12" Margin="2">
                            <Border x:Name="PART_Indicator"   Background="{TemplateBinding Foreground}" HorizontalAlignment="Left" CornerRadius="10"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>
